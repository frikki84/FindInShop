            android:layout_gravity="center_horizontal"/>




        <Button

            android:id="@+id/btnFromManual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="60dp"
            android:text="@string/btnManual" />


    </LinearLayout>




</ScrollView>